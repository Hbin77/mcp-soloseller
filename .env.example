# ============================================
# 쇼핑몰 자동화 MCP 서버 환경 설정
# ============================================

# 서버 설정
MCP_HOST=0.0.0.0
MCP_PORT=8080
DEBUG=false

# 데이터베이스
DATABASE_URL=sqlite+aiosqlite:///./data/shop.db

# ============================================
# 네이버 스마트스토어 API
# https://apicenter.commerce.naver.com
# ============================================
NAVER_CLIENT_ID=your_client_id
NAVER_CLIENT_SECRET=your_client_secret
NAVER_SELLER_ID=your_seller_id

# ============================================
# 쿠팡 WING API
# https://wing.coupang.com
# ============================================
COUPANG_VENDOR_ID=your_vendor_id
COUPANG_ACCESS_KEY=your_access_key
COUPANG_SECRET_KEY=your_secret_key

# ============================================
# CJ대한통운 API (기업계약 시)
# ============================================
CJ_CUSTOMER_ID=your_customer_id
CJ_API_KEY=your_api_key

# Delivery Tracker API (대안)
DELIVERY_TRACKER_API_KEY=your_tracker_api_key

# ============================================
# 알림 설정
# ============================================
# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Slack (선택)
SLACK_WEBHOOK_URL=your_webhook_url

# Email (선택)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com
SMTP_TO=recipient@example.com

# ============================================
# 스케줄 설정
# ============================================
# 1차 송장 처리 시간 (HH:MM)
SCHEDULE_FIRST_BATCH=12:00
# 2차 송장 처리 시간 (HH:MM)
SCHEDULE_SECOND_BATCH=15:30
# 배송 추적 간격 (분)
TRACKING_INTERVAL_MINUTES=30

# ============================================
# 재고 설정
# ============================================
# 재고 부족 알림 임계값
STOCK_ALERT_THRESHOLD=5

# ============================================
# 기타
# ============================================
TIMEZONE=Asia/Seoul
